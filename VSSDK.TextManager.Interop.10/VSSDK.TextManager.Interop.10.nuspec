<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>VSSDK.TextManager.Interop.10</id>
    <version>0.0.0</version>
    <authors>Sam Harwell</authors>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      This package provides the Visual Studio "Text Manager" COM-interop assemblies used by Visual Studio 2010 and newer.
    </description>
    <summary>Visual Studio (Text Manager Interop) for Visual Studio 2010+</summary>
    <dependencies>
      <!-- Visual Studio 2010 -->
      <dependency id="VSSDK.IDE.10" version="[10.0.0,11.0.0)"/>
      <!--
      Exposed Dependencies (Microsoft.VisualStudio.TextManager.Interop.dll):
        Microsoft.VisualStudio.OLE.Interop

      Exposed Dependencies (Microsoft.VisualStudio.TextManager.Interop.8.0.dll):
        Microsoft.MSXML
        Microsoft.VisualStudio.OLE.Interop
        Microsoft.VisualStudio.Shell.Interop
        Microsoft.VisualStudio.TextManager.Interop

      Exposed Dependencies (Microsoft.VisualStudio.TextManager.Interop.10.0.dll):
        Microsoft.VisualStudio.TextManager.Interop
        Microsoft.VisualStudio.TextManager.Interop.8.0
      -->
      <dependency id="VSSDK.OLE.Interop.10" version="[10.0.0,11.0.0)"/>

      <!-- This would cause a circular dependency; Shell depended on TextManager first so we keep that one. -->
      <!--<dependency id="VSSDK.Shell.Interop.10" version="[10.0.0,11.0.0)"/>-->
    </dependencies>
  </metadata>
  <files>
    <!-- Tools -->

    <file src="install.ps1" target="tools"/>

    <!-- Reference assemblies -->

    <file src="$VSSDK$\VisualStudioIntegration\Common\Assemblies\v2.0\Microsoft.VisualStudio.TextManager.Interop.dll" target="lib\net20"/>
    <file src="$VSSDK$\VisualStudioIntegration\Common\Assemblies\v2.0\Microsoft.VisualStudio.TextManager.Interop.xml" target="lib\net20"/>

    <file src="$VSSDK$\VisualStudioIntegration\Common\Assemblies\v2.0\Microsoft.VisualStudio.TextManager.Interop.8.0.dll" target="lib\net20"/>
    <file src="$VSSDK$\VisualStudioIntegration\Common\Assemblies\v2.0\Microsoft.VisualStudio.TextManager.Interop.8.0.xml" target="lib\net20"/>

    <file src="$VSSDK$\VisualStudioIntegration\Common\Assemblies\v2.0\Microsoft.VisualStudio.TextManager.Interop.9.0.dll" target="lib\net20"/>
    <file src="$VSSDK$\VisualStudioIntegration\Common\Assemblies\v2.0\Microsoft.VisualStudio.TextManager.Interop.9.0.xml" target="lib\net20"/>

    <file src="$VSSDK$\VisualStudioIntegration\Common\Assemblies\v2.0\Microsoft.VisualStudio.TextManager.Interop.10.0.dll" target="lib\net20"/>
    <file src="$VSSDK$\VisualStudioIntegration\Common\Assemblies\v2.0\Microsoft.VisualStudio.TextManager.Interop.10.0.xml" target="lib\net20"/>
  </files>
</package>
